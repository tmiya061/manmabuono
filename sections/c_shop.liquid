{{ 'c_common.min.css' | asset_url | stylesheet_tag }}
{{ 'c_under.min.css' | asset_url | stylesheet_tag }}
{{ 'c_shop.min.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top_sp }}px;
      padding-bottom: {{ section.settings.padding_bottom_sp }}px;
    }
  }
{%- endstyle -%}

<div class="c_shop__top page-width">
    <p class="c_shop__top-text">
        {{ section.settings.top_text }}
    </p>
    <a href="/pages/contact" class="c_common__btn">
        お問い合わせはこちら
    </a>
</div> 



{% schema %}
{
    "name": "取り扱い店舗一覧 - 上部",
    "settings": [
        {
        "type": "textarea",
        "id": "top_text",
        "label": "fv下テキスト",
        "default": "fv下テキスト"
        },
        {
        "type": "header",
        "content": "上下の余白"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "上部の余白（pc）",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "下部の余白（PC)",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_top_sp",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "上部の余白",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_bottom_sp",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "下部の余白",
        "default": 32
        }
    ],
    "presets":[
        {
        "name" : "取り扱い店舗一覧 - 上部",
        "category": "カスタムパーツ"
        }
    ]
}
{% endschema %}