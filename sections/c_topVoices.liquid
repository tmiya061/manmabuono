                                        <defs>
                                            <clipPath id="clip0_390_5900">
                                            <rect width="18" height="15" fill="white" transform="translate(0.966919)"/>
                                            </clipPath>
                                        </defs>
                                    </svg>
                                    <span>
                                        {{ block.settings.voices_name }}
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endcase %}
                {% endfor %}
            </div>
        </div>
        <div class="swiper-button-prev --topVoices">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="20" viewBox="0 0 25 20" fill="none">
                <path d="M24.5 10H11M11 1.5L2.5 10L11 18.5" stroke="#FF7B5E" stroke-width="3"/>
            </svg>
        </div>
        <div class="swiper-button-next --topVoices">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="20" viewBox="0 0 25 20" fill="none">
                <path d="M0.5 10H14M14 1.5L22.5 10L14 18.5" stroke="#FF7B5E" stroke-width="3"/>
            </svg>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "お客様の声",
    "settings": [
        {
        "type": "header",
        "content": "上下の余白"
        },
        {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "上部の余白（pc）",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 200,
        "step": 2,
        "unit": "px",
        "label": "下部の余白（PC)",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_top_sp",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "上部の余白",
        "default": 32
        },
        {
        "type": "range",
        "id": "padding_bottom_sp",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "下部の余白",
        "default": 32
        }
    ],
    "blocks" : [
        {
        "type": "voices",
        "name": "お客様の声",
        "settings": [
                {
                    "type": "image_picker",
                    "id": "voices_img",
                    "label": "動画"
                },
                {
                    "type": "textarea",
                    "id": "voices_text",
                    "label": "テキスト",
                    "default": "テキストが入ります"
                },
                {
                    "type": "text",
                    "id": "voices_name",
                    "label": "名前",
                    "default": "テキストが入ります"
                }
            ]
        }
    ],
    "presets":[
        {
        "name" : "お客様の声",
        "category": "カスタムパーツ"
        }
    ]
}
{% endschema %}
